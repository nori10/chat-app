<!-- コメント入力フォーム ------------------------------------------------------------>
<%= form_with(model: [post, comment], url: post_comments_path(@post) ) do |f| %>
  <div class="form-group">
    <%= f.text_area :content, class:"form-control", :size => "10x5", placeholder:"Your Comment" %>
  </div>
    <%= f.submit "Comment", class: "btn btn-outline-dark comment-submit float-right" %>
<% end %>

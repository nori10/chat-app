<h4><%= current_user.name %>'s Tweet</h4>

<% @posts.each do |post| %>
    <div class="panel panel-primary">

            <div class="panel-heading">
                <%= post.user.name %>
                <div class="post_time">
                    <%= post.created_at.strftime('%m/%d %H:%M') %>
                </div>
            </div>
            <div class="panel-body">
                <%= post.body %>
            </div>

            <div class="panel-footer">
                <div class="buttons">
                    <a href="/posts/<%=post.id%>" data-method="delete"><span class="glyphicon glyphicon-trash"></a>
                </div>
            </div>
        
    </div>
<% end %>